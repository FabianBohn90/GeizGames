<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.geizgames.ui.fragments.DetailFragment"
        tools:layout="@layout/fragment_detail"
        android:label="DetailFragment" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="background_image"
            app:argType="string" />
        <argument
            android:name="metacritic"
            app:argType="integer" />
        <argument
            android:name="platform"
            app:argType="string[]" />
        <action
            android:id="@+id/action_detailFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <argument
            android:name="genre"
            app:argType="string[]" />
        <argument
            android:name="release"
            app:argType="string" />
        <argument
            android:name="slug"
            app:argType="string" />
        <argument
            android:name="index"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        tools:layout="@layout/fragment_search"
        android:name="com.example.geizgames.ui.fragments.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        tools:layout="@layout/fragment_game"
        android:name="com.example.geizgames.ui.fragments.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@android:anim/fade_in" />
        <action
            android:id="@+id/action_gameFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <argument
            android:name="genres"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/genresFragment"
        tools:layout="@layout/fragment_genres"
        android:name="com.example.geizgames.ui.fragments.GenresFragment"
        android:label="GenresFragment" >
        <action
            android:id="@+id/action_genresFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
</navigation>