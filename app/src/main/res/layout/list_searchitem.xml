<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_search_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#B2090909"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_game_splash_search"
                android:layout_width="116dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/test_splash" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_platforms_search"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="2dp"
                app:cardMaxElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_game_splash_search"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp"
                    android:paddingTop="2dp"
                    android:paddingRight="1dp"
                    android:paddingBottom="2dp">

                    <ImageView
                        android:id="@+id/iv_platform1_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/mac_os_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform2_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/windows_pc_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform3_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/nintendo_gamecube_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform4_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/sony_playstation_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform5_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/android_os_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform6_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/app_ios_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform7_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/nintendo_switch_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform8_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/linux_os_white"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_platform9_search"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:srcCompat="@drawable/xbox_white"
                        tools:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_game_score"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_green"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="90" />

            <TextView
                android:id="@+id/tv_game_title_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_game_score"
                app:layout_constraintStart_toEndOf="@+id/iv_game_splash_search"
                app:layout_constraintTop_toBottomOf="@+id/cv_platforms_search"
                tools:text="Game Titel" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>